<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context=".MainActivity">

    <com.onexeor.particlesview.ParticlesView
        android:id="@+id/p.v"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:pv_background_color="@color/colorBlack"
        app:pv_linking_line_color="@color/colorWhite"
        app:pv_linking_line_width="0.5dp"
        app:pv_linking_nodes_distance="100dp"
        app:pv_nodes_color="@color/colorWhite"
        app:pv_nodes_count="100"
        app:pv_nodes_size="2dp"
        app:pv_nodes_speed_max="10"
        app:pv_nodes_speed_min="1"
        app:pv_touchable="false" />


    <io.singulart.pulse_button.PulseButton
        android:id="@+id/btn.pulse"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:pb_color_center_circle_stroke="#21D9CC"
        app:pb_inner_circle_stroke_padding="7dp"
        app:pb_pulse_speed="200"
        android:visibility="visible"
        app:pb_src="@drawable/ic_arrow_right"
        app:pb_stroke_width_of_center_circle="1dp"
        app:pb_stroke_width_of_outer_circle="2dp"
        app:pb_wave_padding="20dp" />

    <io.singulart.particle_progress_bar.ParticleProgressBar
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:ppb_color="@color/colorWhite"
        app:ppb_count_balls="8"
        app:ppb_enabled="false" />

    <io.singulart.bottomnavigationbar.CenterNavigationButton
        android:id="@+id/cnb"
        android:layout_width="83dp"
        android:layout_height="83dp"
        android:layout_marginBottom="38dp"
        app:cnb_background_color="#282B43"
        app:cnb_foreground_color="#21D9CC"
        app:cnb_foreground_color_normal="#666DA5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <io.singulart.bottomnavigationbar.BottomNavigationBar
        android:id="@+id/bnb"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:bnb_background_color="#282B43"
        app:bnb_center_btn="true"
        app:bnb_cutout_bottomLeft_radius="50dp"
        app:bnb_cutout_bottomRight_radius="50dp"
        app:bnb_cutout_bottom_offset="42dp"
        android:visibility="visible"
        app:bnb_cutout_deep="46dp"
        app:bnb_cutout_leftTop_radius="10dp"
        app:bnb_cutout_rightTop_radius="10dp"
        app:bnb_item_selected_color="#21D9CC"
        app:bnb_items="@menu/sample_menu"
        app:bnb_shadow_radius="0dp"
        app:bnb_text_item_color="#666DA5"
        app:bnb_text_item_size="14sp"
        app:bnb_top_left_radius="50dp"
        app:bnb_top_right_radius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>